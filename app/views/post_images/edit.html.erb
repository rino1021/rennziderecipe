<div class="container">
 <div class="row">
  <div class = "col-md-3"> </div>
  <div class = "col-md-6">
   <h1>Editing Recipe</h1>

   <%= form_with model: @post_image do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>料理名</h4>
      <%= f.text_field :recipe_name %>
    <h4>材料</h4>
      <%= f.text_field :ingredients %>
    <h4>作り方</h4>
      <%= f.text_area :caption %>
      <%= f.submit 'Update' %>
    <% end %>

    <% if @post_image.user == current_user %>
    <%= link_to "Show",post_image_path(@post_image.id) %>
    |
    <%= link_to "Back",post_images_path(@post_image.id) %>
    <% else %>
    <% end %>
