<div class="container">
 <div class="row">
  <div class = "col-md-1"></div>
  <div class = "col-md-10">
<!--ユーザーの投稿一覧-->
<table class='table table-hover table-inverse'>
  <thead>
   <tr>
     <th>投稿一覧</th>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
    </tr>
   </thead>
    <tbody>
       <% @post_images.each do |post_image| %>
       <tr>
        <td>
         <%= link_to admins_post_image_path(post_image.id) do %>
          <%= image_tag post_image.get_image, :size =>'100x100' %>
         <% end %>
        </td>
        <td><%= post_image.recipe_name %></td>
         <!--ユーザーネーム・ユーザー写真--->
         <td><%= post_image.user.name %><%= image_tag post_image.user.get_profile_image(50,50) %></td>

                              <%# byebug %>
         <td>♥<%= post_image.favorites.count %>いいね</td>
         <td><%= link_to "#{post_image.post_comments.count} コメント",admins_post_image_path(post_image.id) %></td>
         <td></td>
       </tr>
       <% end %>
     </table>
    </tbody>
    </div>
    <div class = "col-md-1"></div>