     <td><%= link_to admins_post_image_path(post_image.id) do %>
          <%= image_tag post_image.get_image, :size =>'100x100' %>
          <% end %>
     </td>
     <td><%= post_image.recipe_name %></td>
     <td><%= post_image.user.name %><%= image_tag post_image.user.get_profile_image(50,50) %></td>
