<!--ユーザーの投稿一覧-->

<table class='table table-hover table-inverse'>
  <thead>
   <tr>
     <th>投稿一覧</th>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
     <th></th>
    </tr>
   </thead>
    <tbody>
       <% @post_images.each do |post_image| %>
       <tr>
        <td>
         <%= link_to post_image_path(post_image.id) do %>
          <%= image_tag post_image.get_image, :size =>'100x100' %>
         <% end %>
        </td>
        <td><%= post_image.recipe_name %></td>
         <!--ユーザーネーム・ユーザー写真--->
         <td><%= post_image.user.name %><%= image_tag post_image.user.get_profile_image(50,50) %></td>
                              <%# byebug %>
         <td>
          <div id="favorite_btn_<%= post_image.id %>"><%= render partial: 'favorites/favorite',locals: {post_image: post_image} %></div>
         </td>
         <td>
          <%= link_to "#{post_image.post_comments.count} コメント",post_image_path(post_image.id) %>
         </td>
       </tr>
       <% end %>
     </table>
    </tbody>
