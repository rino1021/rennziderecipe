<div class="container">
 <div class="row">
  <div class = "col-md-3"> </div>
  <div class = "col-md-6">
   <h1>レシピ投稿フォーム</h1>

 <% if @post_image.errors.any? %>
 <%= @post_image.errors.count %>件のエラーが発生しました
 <ul>
  <%= @post_image.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
  </ul>
 <% end %>

  <%= form_with model: @post_image do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>料理名</h4>
      <%= f.text_field :recipe_name %>
    <%= f.nested_fields_for :ingredients, wrapper_tag: :p do |f| %>
    <h4>材料</h4>
      <p><%= f.text_field :ingredients %>
      <%= f.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %>
      <%= f.add_nested_fields_link :ingredients, 'Add new', class: 'btn btn-primary', role: 'button' %></p>
     <% end %>
    <h4>作り方</h4>
      <p><%= f.text_area :caption %></p>
      <%= f.submit '投稿' %>
  <% end %>

  </div>
  <div class = "col-md-3"></div>
</div>
</div>
