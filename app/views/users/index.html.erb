<p id ="notice"></p>
  <div class ="container px-5 px-sm-0">
   <div class = "row">
    <div class ="col-md-3">
     <%= render 'list',user: @user%>
    </div>
    <div class ="col-md-8 offset-md-1">
     <h1>Users</h1>
      <table class="table">
        <tr>
          <th>image</th><th>name</th>
          <th colspan="3"></th>
        </tr>
      <table class="table">
      <tbody>
         <% @users.each do |user| %>
         <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
          <td><% if current_user.admin? %>
    |     <%= link_to "delete", user, method: :delete,
                                 data: { confirm: "本当に消しますか?" } %>
          <% end %>
          </td>
         </tr>
       <% end %>
        </tbody>
     </table>
    </div>
   </div>
  </div>
