<% if user_signed_in? %>
  <i class="fa fa-heart like-btn"></i>
  <%#= post_image.length %>
<% elsif current_user.favorited_by?(post_image.id) %>
  <%= link_to post_image_favorites_path(post_image, post_image.favorites), class: "like-link", method: :delete, remote: true do %>
    <i class="fa fa-heart unlike-btn"></i>
  <% end %>
  <%#= post_image.favorites.length %>
<% else %>
  <%= link_to post_image_favorites_path(post), class: "like-link", method: :post, remote: true do %>
    <i class="fa fa-heart like-btn"></i>
<% end %>
  <%#= post_image.favorites.length %>
<% end %>